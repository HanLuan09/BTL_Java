<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_quiz"
    tools:context=".activity.KetquaActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kết quả"
            android:textColor="@color/teal_200"
            android:textStyle="bold"
            android:textSize="55dp" />
    </LinearLayout>

    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ProgressBar
            android:id="@+id/circularProgressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/circular"
            android:secondaryProgress="100" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="25%"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kqdung"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="100"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="65dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/tout_btn_shape2"/>
        <TextView
            android:id="@+id/kqsai"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:text="100"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="65dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/tout_btn_shape" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tong"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_shadow_start_color">
        <TextView
            android:id="@+id/ket_qua_tong"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Đậu"
            android:textColor="@color/white"
            android:textSize="52dp"
            android:textStyle="bold" />

    </LinearLayout>
    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/buttonroitrangkq"
        android:text="Trở về"
        android:layout_width="120dp"
        android:layout_height="60dp"/>

</LinearLayout>