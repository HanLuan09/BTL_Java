<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#03A9F4"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/TeViewndOntap"
        android:text="Nội dung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_below="@+id/TeViewndOntap"
        android:layout_marginTop="20dp"
        android:id="@+id/ImViewHinhBienbao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ImViewHinhBienbao"
        android:id="@+id/TeViewDan1"
        android:text="Đáp án 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TeViewDan1"
        android:id="@+id/TeViewDan2"
        android:text="Đáp án 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TeViewDan2"
        android:id="@+id/TeViewDan3"
        android:text="Đáp án 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TeViewDan3"
        android:id="@+id/TeViewDan4"
        android:text="Đáp án 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:textColor="#F44336"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TeViewDan4"
        android:id="@+id/TeViewXemDapan"
        android:text="Đáp án"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:textColor="#F44336"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TeViewDan4"
        android:id="@+id/TeViewDan"
        android:text="Đáp án"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/teal_200"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TeViewDan"
        android:id="@+id/TeViewgiathich"
        android:text="Giải thích"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/teal_200"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TeViewgiathich"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</RelativeLayout>